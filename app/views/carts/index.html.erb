<div class="row">
  <div class="col-md-12">

    <h2> Shopping Cart </h2>
    <div class="pull-right btn btn-lg btn-danger" style="margin-bottom: 20px;">
      <%= link_to("Clear the cart", clear_cart_carts_path, method: :delete, data: { confirm: "Are you sure to delete the whole cart? "}) %>
    </div>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product List</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>
            <td>
              <% cart_item = current_cart.cart_items.find_by(product_id: cart_item.product_id)%>
              <%= simple_form_for cart_item, url: cart_item_path(cart_item.product_id) do |f|%>
                <%= f.select :quantity, [1,2,3,4,5] %>
                <%= f.submit "Update"  %>
              <% end %>
            </td>
            <td>
              <%= link_to cart_item_path(cart_item.product_id), method: :delete do  %>
                <i class="fa fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <br>

    <div class="total clearfix">
      <span class="pull-right">
         <span> Total: Â¥ <%= render_cart_total_price(current_cart) %> </span>
      </span>
    </div>

    <hr>

    <div class="checkout clearfix">
      <%= link_to("Confirm the bill", "#", method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>
